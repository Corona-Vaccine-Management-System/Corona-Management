  <div style="margin-top: 10vmin;" class="form-group col-md-6">
    <label for="inputHOSP"><img src="images/pin.png" width="4%">&nbsp;Choose hospital closest to you</label>
    <select id="inputHOSP" name="inputHOSP" class="form-control">
      <% for(var i =0;i<hospital.length;i++){
        if(hospital[i].H_address == pin) { %>
      <option class="form-group"><%= hospital[i].H_name %></option>
    <% }} %> 
    </select></div>
    

  <div class="row d-flex justify-content-between">
  	<div class="col-md-8">
  		<button style="margin: 5vmin 0 0 16px" type="submit" class="btn btn-primary" style="width: 40%">Register</button>
  	</div>

  </div>
</form>

