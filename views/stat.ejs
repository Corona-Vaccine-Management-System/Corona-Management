<%- include('partials/header'); -%>

<link rel="stylesheet" type="text/css" href="css/view.css">
 



<div class="card-columns container" style="margin-top: 18vmin;">
  <% if (gender[0]!==undefined){ %>
  <div class="card bg-primary">
    <div class="card-body text-center">
        <h5 class="card-title" style="font-size: 30px"><%= gender[0].P_Gender %> Patients</h5><hr>
      <p class="card-text" style="font-weight: 500;font-size: 60px;"><%= gender[0].count %></p>
    </div>
  </div>
  <% } %>
  <% if (doctor!==undefined){ %>
  <div class="card bg-success">
    <div class="card-body text-center">
      <h5 class="card-title" style="font-size: 30px">Doctors Registered</h5><hr>
      <p class="card-text" style="font-weight: 500;font-size: 60px;"><%= doctor.count %></p>
    </div>
  </div>
  <% } %>
  <% if (gender[1]!==undefined){ %>
  <div class="card bg-danger">
    <div class="card-body text-center">
      <h5 class="card-title" style="font-size: 30px"><%= gender[1].P_Gender %> Patients</h5><hr>
      <p class="card-text" style="font-weight: 500;font-size: 60px;"><%= gender[1].count %></p>
    </div>
  </div> 
  <% } %>
  <% if (type[0]!==undefined){ %>
  <div class="card bg-warning">
    <div class="card-body text-center">
      <% if( type[0].H_type==='G') type[0].H_type='Government'; %>
      <% if( type[0].H_type==='P') type[0].H_type='Private'; %>
      <h5 class="card-title" style="font-size: 30px"><%= type[0].H_type %> Hospitals</h5><hr>
      <p class="card-text" style="font-weight: 500;font-size: 60px;"><%= type[0].count %></p>
    </div>
  </div>
  <% } %>
  <% if (gender[2]!==undefined){ %>
  <div class="card bg-success">
    <div class="card-body text-center">
      <h5 class="card-title" style="font-size: 30px"><%= gender[2].P_Gender %> Patients</h5><hr>
      <p class="card-text" style="font-weight: 500;font-size: 60px;"><%= gender[2].count %></p>
    </div>
  </div>
<% } %>
  <% if (type[1]!==undefined){ %>
  <div class="card bg-danger">
    <div class="card-body text-center">
      <% if( type[1].H_type==='G') type[1].H_type='Government'; %>
      <% if( type[1].H_type==='P') type[1].H_type='Private'; %>
      <h5 class="card-title" style="font-size: 30px"><%= type[1].H_type %> Hospitals</h5><hr>
      <p class="card-text" style="font-weight: 500;font-size: 60px;"><%= type[1].count %></p>
    </div>
  </div>
  <% } %>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript" src="js/view.js"></script>
<%- include('partials/footer'); -%>
