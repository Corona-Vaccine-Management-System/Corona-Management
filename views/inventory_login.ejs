    <body>

        <!-- Sing in  Form -->

        <section class="sign-in main">
            <div class="container">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="https://s3.amazonaws.com/redvector-public-assets/cms-content/production/uploads/2019/12/solutions-inventory.png" alt="sign up image"></figure>
                        <div class="signup-image-link">
                        </div>
                    </div>

                    <div class="signin-form">
                        <h2 class="form-title" style="font-family: Dancing Script;">Sign in</h2>
                        <form method="POST" class="register-form" id="login-form">
                            <div class="form-group">
                                <label for="Inventory ID"><i class="fas fa-warehouse"></i></label>
                                <input type="text" name="invtid" id="text" placeholder="Inventory ID" required>
                            </div>
                            <div class="form-group">
                                <label for="Inventory Name"><i class="fas fa-user"></i></label>
                                <input type="text" name="invtname" id="text" placeholder="Inventory Name" required>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        </div>
<script type="text/javascript" src="js/copy.js"></script>
